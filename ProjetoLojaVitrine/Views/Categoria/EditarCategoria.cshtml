@model ProjetoLojaVitrine.Models.Categoria
@{
    ViewBag.Title = "EditarCategoria";
}

<h2>Editar Categoria</h2>

@using (Html.BeginForm())
{
    Html.AntiForgeryToken();
   
<div class="form-group">
    <div>
        @Html.DisplayNameFor(x => x.NomeCategoria)
        @Html.TextBoxFor(x => x.NomeCategoria, new { @class = "form-control" })
    </div>
    <div>
        @Html.DisplayNameFor(x => x.Descricao)
        @Html.TextBoxFor(x => x.Descricao, new { @class = "form-control" })
    </div>
</div>

    <div>
        <input type="submit" value="Salvar Edição" class="btn btn-success" />
    </div>
}