    ViewBag.Title = "ExcluirUsuario";
}

<h2>Excluir Usuario</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>  
        
