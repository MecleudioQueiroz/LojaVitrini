@model IEnumerable <ProjetoLojaVitrine.Administrativo.Models.Usuario>
@{
    ViewBag.Title = "ListarUsuario";
}

<h2>Listar Usuario</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(x => x.id)</th>
            <th>@Html.DisplayNameFor(x => x.Nome)</th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(x => item.id)</td>
                <td>@Html.DisplayFor(x => item.Nome)</td>
                <td>
                    <a class="btn btn-default btn-sm" href="@Url.Action("EditarUsuario", "Usuario", new {item.id})"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a class="btn btn-default btn-sm" href="@Url.Action("ExcluirUsuario", "Usuario", new {item.id})"><i class="glyphicon glyphicon-floppy-remove"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>

