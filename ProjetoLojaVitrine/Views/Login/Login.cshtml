@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logar</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>


<body>
    @using (Html.BeginForm(FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-12 center-block">

                @if (ViewBag.Erro != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Erro:</span>
                        @ViewBag.Erro
                    </div>
                }


                <div class="input-group input-group-lg">
                    <i class="input-group-addon" id="basic-addon1"><i class="glyphicon glyphicon-user"></i></i>
                    <input type="text" class="form-control" name="Nome" placeholder="Nome Usuario" aria-describedby="basic-addon1">
                </div>

                <div class="input-group input-group-lg">
                    <i class="input-group-addon" id="basic-addon2"><i class="glyphicon glyphicon-lock"></i></i>
                    <input type="password" class="form-control" name="Senha" placeholder="Isira a Senha" aria-describedby="basic-addon2" />
                </div>
                <br />
                <input type="submit" class="btn btn-group-xs" name="logar" value="Logar" />
            </div>
        </div>
    }
</body>
</html>
















